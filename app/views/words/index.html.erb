<%= form_tag words_path, method: :get do %>
  <%=select_tag "sort", options_for_select([["ascending","ASC"],["descending","DESC"]])%>
  <%=select_tag "type", 
  options_for_select(CourseCategory.all.collect{|p| [ p.name, p.id ] }<< ["all type",0],["all type",0])
  %>
  <%=select_tag "stateWord", 
    options_for_select([["all",0],["remembered",1],["not learn",2]])%>
  <%= submit_tag "filter" %>
<% end %>

<%=form_tag importFromFile_words_path, multipart: true do%>
  <%=file_field_tag :file%>
  <%=submit_tag "Import", class: "btn btn-primary"%>
<%end%>

<div class="lessonShowWord">
  <%= render @words %>
</div>

<div style="margin: 10px auto">
  <%=paginate @words,theme: 'twitter-bootstrap-4' %>  
</div>

<%= javascript_pack_tag 'textToSpeech'%>

