<% length = @words.length%>
flash card of lesson <%=params[:lesson_id]%>
<button id="flashcard_auto" class="btn btn-primary">Auto</button>
<button id="flashcard_paused" class="btn btn-primary">Paused</button>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" 
style="max-width: 800px; margin: auto;">
  <div class="carousel-inner">
    <%=render @words%>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  <div style="max-width: 500px; margin: 10px auto;text-align:center">
    <div><span id="pos-flashCard">1</span>/<%=length%></div>
    <div class="progress" >
      <div id="pro-flashCard"class="progress-bar bg-info" role="progressbar" style="width: 0%" aria-valuenow="1" aria-valuemin="0" aria-valuemax="<%=length%>"></div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'flashcard' %>