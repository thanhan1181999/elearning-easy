<% length = @words.length%>
<div id="current_user_id" style="display:none"><%=session[:user_id]%></div>

<div class="container text-center" style="background:darkorange">
<!---->
<h2 style="text-align:center;display:inline">flash card of lesson <%=params[:id]%></h3>
<br/>
<button id="flashcard_auto" class="btn btn-primary">Auto</button>
<button id="flashcard_paused" class="btn btn-primary">Paused</button>
<br/>

<div id="carousel-flash-card" class="carousel slide" style="max-width: 800px; margin: auto;">
  <div class="carousel-inner">
    <%=render @words%>
  </div>
  <a class="carousel-control-prev" href="#carousel-flash-card" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel-flash-card" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

  <div style="max-width: 500px; margin:2px auto 0px;text-align:center">
    <div class="progress" >
      <div id="pro-flashCard"class="progress-bar bg-info" role="progressbar" style="width: 0%" aria-valuenow="1" aria-valuemin="0" aria-valuemax="<%=length%>"></div>
    </div>
    <div><span id="pos-flashCard">1</span>/<%=length%></div>
  </div>

</div>
</div>
<script>
  //window.location.reload();
  $(document).ready(function(){
    $("html, body").animate({ scrollTop: $(document).height() }, 1000);
  });
</script>
