<% 
if current_user?(@user) 
    nameOfCreatedCourse = "Course of your following people"
else
    nameOfCreatedCourse = @user.name + "'s Course"
end
%>

<div class="row">
    <%= render 'userInforAction'%>

    <div class="col-md-9">
        <h3 style="text-align: center; margin: 20px;"><%=nameOfCreatedCourse%></h3>
        <div class="container-fluid">
            <div class="row">
                <%= render @courses || "have no course" %>
            </div>
        </div>
        <%= will_paginate @courses, :renderer => WillPaginate::ActionView::BootstrapLinkRenderer %> 
    </div>
</div>

<%=render 'shared/modal'%>